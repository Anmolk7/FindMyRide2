<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/loginback"
    tools:context="com.example.anmol.findmyride.MyLocation"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coordinates"
        android:id="@+id/co"
        android:textStyle="bold"
        android:textColor="#ffff"
        android:fontFamily="casual"
        android:textSize="25dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true" />






    <Button

        android:layout_width="185dp"
        android:background="#003d5c"
        android:textColor="#ffff"
        android:fontFamily="casual"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Request my Location"
        android:layout_marginTop="70dp"
        android:textSize="15dp"


        android:id="@+id/button"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />



    <TextView
        android:fontFamily="casual"
        android:layout_width="match_parent"

        android:gravity="center"

        android:layout_height="wrap_content"

        android:textIsSelectable="true"

        android:textSize="22sp"
        android:textColor="#ffff"
        android:id="@+id/textView"

        android:layout_below="@+id/co"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/smsbutt"
        android:layout_below="@+id/call"
        android:layout_centerHorizontal="true" />



    <TextView
        android:fontFamily="casual"
        android:gravity="center"
        android:id="@+id/PredictCor"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:ems="10"
        android:textColor="#0575ba"
        android:inputType="textPersonName"
        android:textSize="22sp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="23dp" />




</RelativeLayout>
